<div class="text">
	<h1>Add new song</h1>

	<%= form_for @song do |f| %>
	  <% if @song.errors.any? %>
	    <div class="error_messages">
	      <h2>Form is invalid</h2>
	      <ul>
	        <% for message in @song.errors.full_messages %>
	          <li><%= message %></li>
	        <% end %>
	      </ul>
	    </div>
	  <% end %>
	  <p>
	    <%= f.label :name %><br />
	    <%= f.text_field :name %>
	  </p>
	  <p>
	    <%= f.label :url %><br />
	    <%= f.text_field :url %>
	  </p>
	  <p class="button"><%= f.submit %></p>
	<% end %>
</div>	
